<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <tab id="elsnertech_login" translate="label" sortOrder="1000">
            <label>Elsnertech</label>
        </tab>
        <section id="login" translate="label" sortOrder="130" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Login Page</label>
            <tab>elsnertech_login</tab>
            <resource>Elsnertech_Customisation::general</resource>
            <group id="mainConfig" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Login registration page config </label>
                  <field id="banner_image" translate="label comment" type="image" sortOrder="50" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Select Image</label>
                    <backend_model>Elsnertech\Customisation\Model\Config\Backend\Image</backend_model>
                    <base_url type="media" scope_info="1">theme</base_url>
                </field>
                <field id="login_content" translate="label" type="editor" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="1">
                        <label>Content</label>
                         <frontend_model>Elsnertech\Customisation\Block\Adminhtml\Editor</frontend_model>
                </field>
            </group>
        </section>
    </system>
</config>