        </bookmark>
        <component name="columns_controls">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="columnsData" xsi:type="array">
                        <item name="provider" xsi:type="string">elsnertech_payslip_index_listing.elsnertech_payslip_index_listing.elsnertech_payslip_index_listing_columns</item>
                    </item>
                    <item name="component" xsi:type="string">Magento_Ui/js/grid/controls/columns</item>
                    <item name="displayArea" xsi:type="string">dataGridActions</item>
                </item>
            </argument>
        </component>
        <exportButton name="export_button">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="selectProvider" xsi:type="string">elsnertech_payslip_index_listing.elsnertech_payslip_index_listing.elsnertech_payslip_index_listing_columns.ids</item>
                </item>
            </argument>
        </exportButton>
