<?xml version="1.0" encoding="UTF-8"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
   <table name="product_inquiry" resource="default" engine="innodb" comment="product_inquiry">
      <column xsi:type="int" name="id" padding="10" unsigned="true" nullable="false" 
      identity="true" comment="Id" />
      <column xsi:type="varchar" name="name" nullable="false" length="255" comment="Name"/>
      <column xsi:type="varchar" name="email" nullable="true"  comment="email"/>
      <column xsi:type="varchar" name="inquiry" nullable="true" comment="inquiry"/>
      <column xsi:type="varchar" name="productname" nullable="false" length="255" comment="productname"/>
      <column xsi:type="varchar" name="productsku" nullable="false" length="255" comment="productsku"/>

      <constraint xsi:type="primary" referenceId="PRIMARY">
         <column name="id" />
      </constraint>
   </table>
</schema>