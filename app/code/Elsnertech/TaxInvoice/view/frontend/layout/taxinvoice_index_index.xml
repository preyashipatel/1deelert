<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="../../../../../../../lib/internal/Magento/Framework/View/Layout/etc/page_configuration.xsd">
    <body>
    <referenceBlock name="breadcrumbs">
            <action method="addCrumb">
                <argument name="crumbName" xsi:type="string" translate="true">Home</argument>
                <argument name="crumbInfo" xsi:type="array">
                    <item name="title" xsi:type="string" translate="true">Home</item>
                    <item name="label" xsi:type="string" translate="true">Home</item>
                    <item name="link" xsi:type="string">{{baseUrl}}</item>
                </argument>
            </action>
             <action method="addCrumb">
                <argument name="crumbName" xsi:type="string" translate="true">Tax Invoice</argument>
                <argument name="crumbInfo" xsi:type="array">
                    <item name="title" xsi:type="string" translate="true">Tax Invoice</item>
                    <item name="label" xsi:type="string" translate="true">Tax Invoice</item>
                </argument>
            </action>
   </referenceBlock>
        <referenceContainer name="content">
        <block class="Elsnertech\TaxInvoice\Block\TaxInvoiceForm" name="taxinvoice_index_index" template="Elsnertech_TaxInvoice::form.phtml"/>
        </referenceContainer>

         <referenceContainer name="page.wrapper">
             <container name="tax-invoice.banner" htmlTag="div" htmlClass="inner-banner custom-breadcrumbs" before="main.content">
                <block class="Magento\Framework\View\Element\Template" name="taxinvoice.file" template="Magento_Cms::tax_invoice_banner.phtml" />
            </container>
            
        </referenceContainer>
        <move element="breadcrumbs" destination="tax-invoice.banner" before="-"/>
    </body>
</page>