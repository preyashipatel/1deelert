                    <span class="product-price-new"><?= $configuredPrice->getAmount().'.00'; ?></span>
                </span>
                <span class="old-price-wrap">
                    <span class="currecny-symbol"><?php echo $currecyHelper->getCurrentCurrencySymbol();?></span>
                    <span class="product-price-old" id="old-price-2"><?= $configuredRegularPrice->getAmount().'.00' ;?></span>
                </span>
            </div>
